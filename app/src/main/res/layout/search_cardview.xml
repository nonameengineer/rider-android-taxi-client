<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
              app:behavior_peekHeight="260dp"
              app:behavior_hideable="false"
              android:elevation="44dp"
              android:id="@+id/bottomSheetSearch">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/searchMinimisedCardView">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

        <FrameLayout
                android:id="@+id/scene_root"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

            <include layout="@layout/search_collapsed"/>

        </FrameLayout>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp" android:layout_marginBottom="24dp" android:visibility="visible"
                    android:id="@+id/quickPlacesLayout">

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:clickable="true" app:srcCompat="@drawable/ic_home"
                            android:id="@+id/floatingActionButton" android:layout_marginRight="8dp"
                            app:fabSize="mini" app:backgroundTint="@color/colorAccent" app:elevation="0dp"/>
                    <TextView
                            android:text="Home"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" android:id="@+id/textView5" android:layout_weight="1"
                            android:fontFamily="@font/roboto_medium" android:textSize="14sp"
                            android:gravity="center_vertical"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>